<h1>Lista de Post</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Título</th>
    <th>Text</th>
    <th>Publicado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= post.published %></td>
    <td><%= link_to 'Mostrar', post %></td>
    <td><%= link_to 'Editar', edit_post_path(post) %></td>
    <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: "¿Seguro que desea eliminar este post"} %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Post', new_post_path %>
